<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" type="text/css" href="~/vendors/css/normalize.css">
    <link rel="stylesheet" type="text/css" href="~/vendors/css/grid.css">
    <link rel="stylesheet" type="text/css" href="~/vendors/css/ionicons.min.css">
    <link rel="stylesheet" type="text/css" href="~/resources/css/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300&display=swap" rel="stylesheet">
    <script src="~/resources/js/javascript.js" type="text/javascript"></script>
</head>
<body>
    <nav>
        <div class="row">
            <a  href="@Url.Action("Index", "Home")">
                <img href="#" src="~/resources/img/logo.png" alt="Quiz Time Logo" class="logo">
            </a>
            <ul class="home-nav">
                <li id="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "btn-selected" : "")"><a href="@Url.Action("About", "Home")">About</a></li>
                <li id="@(ViewContext.RouteData.Values["Action"].ToString() == "Register" ? "btn-selected" : "")"><a href="@Url.Action("Register", "Account")">Register</a></li>
                <li id="@(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "btn-selected" : "")"><a href="@Url.Action("Login", "Account")">Login</a></li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <div class="name">
        <footer><p><small>B17101001 Abdul Moiz⠀⠀|⠀⠀B17101066 Muhammad Shaarif Shahid⠀⠀|⠀⠀B17101073 Naqqash Khan</small></p></footer>
    </div>
</body>
</html>
