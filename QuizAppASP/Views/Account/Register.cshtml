
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Account/_LayoutPage1.cshtml";
}
<section>
    <div class="row">
        <div class="signup-form">
            <form action="RegisterUser" method="post">
                <h2>Register</h2>
                <p class="hint-text">
                    Create your account. It's free and only takes a minute.
                </p>
                <div class="form-group">
                    <input type="text"
                    class="form-control"
                    name="FirstName"
                    placeholder="First Name"
                    required="required" />
                </div>
                <div class="form-group">
                    <input type="text"
                    class="form-control"
                    name="LastName"
                    placeholder="Last Name"
                    required="required" />
                </div>
                <div class="form-group">
                    <input type="email"
                    class="form-control"
                    name="Email"
                    placeholder="Email"
                    required="required" />
                </div>
                <div class="form-group">
                    <input type="password"
                    class="form-control"
                    name="Password"
                    placeholder="Password"
                    required="required" />
                </div>
                <div class="form-group">
                    <input type="password"
                    class="form-control"
                    name="confirm_password"
                    placeholder="Confirm Password"
                    required="required" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block">
                        Register Now
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

